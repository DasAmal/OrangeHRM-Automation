<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Grouped Test Suite" parallel="false">

  <!-- ====== SMOKE TESTS ====== -->
  <test name="Smoke Tests">
    <groups>
      <run>
        <include name="Smoke" />
      </run>
    </groups>
    <classes>
      <class name="test_cases.PIMTests"/>
    </classes>
  </test>

  <!-- ====== REGRESSION TESTS ====== -->
  <test name="Regression Tests">
    <groups>
      <run>
        <include name="Regression" />
      </run>
    </groups>
    <classes>
      <class name="test_cases.PIMTests"/>
    </classes>
  </test>

  <!-- ====== CRITICAL TESTS ====== -->
  <test name="Critical Tests">
    <groups>
      <run>
        <include name="Critical" />
      </run>
    </groups>
    <classes>
      <class name="test_cases.PIMTests"/>
    </classes>
  </test>

</suite>
